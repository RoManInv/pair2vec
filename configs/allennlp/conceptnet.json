{
  "dataset_reader": {
    "type": "conceptnet_multi",
//    "use_relation_type_constraints": true,
    "data_dir": "/conceptnet/",
    "preprocessed_dir": "multi_word",
    "arguments_to_relations_file": "arguments_to_relations.txt"
  },
  "train_data_path": {
    "triples_file": "train.txt",
    "partition": "train",
    "partition_true_relations": "arguments_to_relations_train.txt",
  },
  "validation_data_path": {
    "triples_file": "valid.txt",
    "partition": "valid",
    "partition_true_relations": "arguments_to_relations_valid.txt",
  },
  "model": {
    "type": "multiword_distmult_sampled_relations",
    "dropout": 0.05,
    "embedding_dim": 200,
    "num_negative_samples": 200,
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "/glove/glove.6B.200d.txt.gz",
        "embedding_dim": 200,
        "trainable": true
      }
    }
  },
  "iterator": {
        "type": "basic",
        "batch_size": 128
    },
  "trainer": {
    "num_epochs": 200,
    "grad_norm": 10.0,
    "patience": 10,
    "validation_metric": "+mrr",
    "cuda_device": 0,
    "learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "max",
        "patience": 2
    },
    "optimizer": {
      "type": "adam",
      "betas": [0.9, 0.999],
      "lr": 0.001
    }
  }
}
