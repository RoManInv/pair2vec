{
    "dataset_reader": {
        "type": "squad2",
//        "multiparagraph": true,
        "token_indexers": {
        "tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        },
		"relemb_tokens": {
            "type": "single_id",
            "lowercase_tokens": true,
            "namespace": "relemb_tokens"
        },
        "token_characters": {
            "type": "characters",
            "character_tokenizer": {
            "byte_encoding": "utf-8",
            "start_tokens": [259],
            "end_tokens": [260]
            }
        }
        }
    },
   "train_data_path": "/squad/train-v2.0.json",
    "validation_data_path": "/squad/dev-v2.0.json",
//    "train_data_path": "/squad/squad.json",
//    "validation_data_path": "/squad/squad.json",
    "vocabulary": {
        "directory_path": "models/relemb_vocabulary"
    },
    "model": {
      "type": "relemb-docqa-no-answer",
      "relemb_dropout": 0.15,
      "ablation_type": "attn_over_rels",
      "config_file": "models/2_typed_rel_samp/relemb.json",
       "model_file": "models/2_typed_rel_samp/best.pt",
       "embedding_keys": [
            "tokens"
        ],
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "/glove/glove.6B.300d.txt.gz",
          "embedding_dim": 300,
          "trainable": false
        },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "num_embeddings": 262,
            "embedding_dim": 20
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 20,
            "num_filters": 100,
            "ngram_filter_sizes": [5]
          },
          "dropout": 0.2
        }
      },
      "phrase_layer": {
        "type": "gru",
        "input_size": 700,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      },
      "residual_encoder": {
        "type": "gru",
        "input_size": 200,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      },
      "no_answer_scorer": {
      "input_dim": 600,
      "num_layers": 2,
      "hidden_dims": [80, 1],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
      },
      "span_start_encoder": {
        "type": "gru",
        "input_size": 200,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      },
      "span_end_encoder": {
        "type": "gru",
        "input_size": 400,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      }
    },
    "iterator": {
      "type": "bucket",
//      "sorting_keys": [["paragraphs", "list_num_tokens"], ["question", "num_tokens"]],
      "sorting_keys": [["passage", "num_tokens"], ["question", "num_tokens"]],
      "batch_size": 30
    },
    "trainer": {
      "num_epochs": 30,
      "grad_norm": 10.0,
      "patience" : 10,
      "cuda_device" : 0,
      "num_serialized_models_to_keep": 2,
      "validation_metric": "+em",
      "learning_rate_scheduler": {
          "type": "reduce_on_plateau",
          "factor": 0.5,
          "mode": "max",
          "patience": 2
      },
      "optimizer": {
        "type": "adam",
        "betas": [0.9, 0.9]
      }
    }
  }
